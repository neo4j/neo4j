@import 'nib'
@import 'variables'

.graph-viz
  float: left
  width: 500px

  path.link
    fill: none
    stroke: #7F8C8D
    stroke-width: 2px

  text
    font-family: sans-serif
    pointer-events: none

marker
  fill: #D8DADC

text
  .faded
    fill: #333

.node
  .ring
    fill: none
    opacity: 0
    stroke: #6AC6FF
  &.selected
    .ring
      stroke: #FDCC59
  &.selected:hover
    .ring
      stroke: #6AC6FF
  &:hover, &.selected
    .ring
      opacity: .3

.relationship
  .overlay
    opacity: 0
    fill: #6AC6FF
   &.selected
    .overlay
      fill: #FDCC59
  &.selected:hover
    .overlay
      fill: #6AC6FF
  &:hover, &.selected
    .overlay
      opacity: .3

.outline, .ring
  cursor: pointer
