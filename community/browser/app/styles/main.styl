  transist all

  .intro
    stretch()
    display: none
    text-align: center
    position: absolute
    text-align: center
    background: url(../images/intro.png) 50% 48% no-repeat

  footer
    bottom: 22px
    color: #A0AAB1
    font-size: 15px
    left: 0
    line-height: 23px
    padding: 0 24px
    position: absolute
    right: 0
    text-align: center

.update-button
  position:absolute
  bottom: 16px
  right: 16px

