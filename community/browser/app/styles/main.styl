    left: (drawer-width + nav-width);

.alert-box.global
  margin-bottom: 0
  .close
    display: none


#editor
  &.file-loaded
    .view-editor
      top: 39px
  &.maximize-editor
    height: 100% !important
    .view-editor
      bottom: 0
    .message-bar
      position: absolute
    .CodeMirror
      position: absolute
      left: 0
      right: 0
