@import 'variables'
@import 'nib'
@import 'mixins'

.view-result
  article.help, article.guide
    background-color #fff
    padding 0
    padding: 30px
    margin 0
    [help-topic]
      background-color: #F8F8F8
      border-radius: 3px
      border: 1px solid #DADADA
      display: inline-block
      font-family: mono-font-family
      font-size: 12px
      line-height: 18px
      margin-bottom: 5px
      margin-right: 5px
      padding: 0 4px
    p
      font-size: 15px
      line-height: 1.428
      color: #666
    h1, h2, h3, h4, h5, dt
      background none
      display inline
      padding 0
    h2 span
      display block
      font-size 12pt
      font-style italic
    figure  {
      display: block;
      margin: 0;
      margin-top: 16px;
    }
    figcaption {
      padding: 5px;
      font-size: 1em;
      font-style: italic
      font-weight: 300;
      border: none;
      background: transparent;
      word-wrap:normal;
      text-align: center;
    }
    pre.code
      background: #F3F3F3
      cursor: pointer
      border: 1px solid #E1E1E8
      &:hover
        background: lighten(color-link, 80%)
        //outline: 2px solid color-link
      &.oneline
        text-overflow: ellipsis; 
        white-space: nowrap; 
        overflow: hidden;
    &.manual
      section
      h1
        font-size 12pt
      h1 span
        display block
    ul, ol
      padding-left: 25px
      line-height: 1.428
    ul
      list-style: disc
      margin-top: 8px
    ul.list-unstyled
      list-style: none

    ul.big, ol.big
      padding-left: 40px
      font-size: 18px
      li
        line-height: 28px
    ul.undecorated
      padding: 0
      list-style: none

    .bg-warning
      padding: 10px
