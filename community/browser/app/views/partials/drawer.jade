#drawer(ng-switch on="whichDrawer")
  div.pane.animate-drawer(ng-switch-when="database")
    include drawer-database
  div.pane.animate-drawer(ng-switch-when="scripts")
    include drawer-scripts
  div.pane.animate-drawer(ng-switch-when="info")
    include drawer-info
  div.pane.animate-drawer(ng-switch-when='preferences')
    include drawer-preferences
  div.pane.animate-drawer(ng-switch-when="credits")
    include drawer-credits
