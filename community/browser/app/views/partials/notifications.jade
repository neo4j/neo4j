ul
  li(ng-repeat="notification in notifications", ng-class="notification.style")
    .row
      .col-sm-9(style="text-align:right")
        span(ng-bind-html='notification.message')
      .col-sm-3
        i(ng-repeat="option in notification.options")
          button.btn.btn-default.btn-sm(ng-click="rememberThenDismiss(notification, option.value)")
            span.fa(ng-class='option.icon') 
            | &nbsp;{{ option.label }}
