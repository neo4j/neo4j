            <groupId>org.neo4j</groupId>
            <artifactId>neo4j</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>

        <dependency>
            <!-- We need this one, or transitive dependencies of kernel
        will end up in the test scope. -->
