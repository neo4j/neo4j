      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.neo4j.examples</groupId>
      <artifactId>neo4j-examples</artifactId>
      <version>${neo4j.version}</version>
      <classifier>sources</classifier>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.neo4j.examples</groupId>
      <artifactId>neo4j-examples</artifactId>
      <version>${neo4j.version}</version>
      <classifier>test-sources</classifier>
      <scope>provided</scope>
    </dependency>
    <dependency>
