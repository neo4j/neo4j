<assembly>
  <id>windows</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>

    <!-- filter plain text -->
    <fileSet>
      <directory>src/main/distribution/text/enterprise</directory>
      <outputDirectory>/</outputDirectory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
    </fileSet>
    <!-- non-maven jars -->
    <fileSet>
      <directory>src/main/distribution/binary</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>system/lib/*.jar</include>
        <include>lib/*.jar</include>
        <include>plugins/gremlin1.5/*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/src/main/distribution/shell-scripts</directory>
      <outputDirectory>/</outputDirectory>
      <lineEnding>dos</lineEnding>
      <includes>
        <include>**/*.bat</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
  		<outputDirectory>/bin</outputDirectory>
  		<unpack>false</unpack>
  		<useProjectArtifact>false</useProjectArtifact>
  		<includes>
          <include>org.neo4j.app:windows-service-wrapper:*</include>
  		</includes>
  	</dependencySet>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>true</useStrictFiltering>
      <includes>
        <include>org.neo4j:*</include>
        <include>org.apache.geronimo.specs:geronimo-jta_1.1_spec</include>
        <include>org.apache.servicemix.bundles:org.apache.servicemix.bundles.jline</include>
        <include>org.apache.lucene:lucene-core</include>
        <include>io.netty:netty</include>
        <include>org.slf4j:slf4j-api</include>
        <include>com.googlecode.concurrentlinkedhashmap:concurrentlinkedhashmap-lru</include>
        <include>org.scala-lang:scala-library</include>
      </includes>
      <excludes>
        <exclude>*:pom:*</exclude>
        <exclude>org.neo4j:neo4j-enterprise:jar</exclude>
        <exclude>org.neo4j:neo4j-advanced</exclude>
        <exclude>org.neo4j:neo4j-community</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>system/lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>true</useStrictFiltering>
      <excludes>
        <exclude>org.neo4j:*</exclude>
        <exclude>org.apache.geronimo.specs:geronimo-jta_1.1_spec</exclude>
        <exclude>org.apache.servicemix.bundles:org.apache.servicemix.bundles.jline</exclude>
        <exclude>org.apache.lucene:lucene-core</exclude>
        <exclude>io.netty:netty</exclude>
        <exclude>org.slf4j:slf4j-api</exclude>
        <exclude>org.scala-lang:scala-library</exclude>
        <exclude>org.neo4j.app:windows-service-wrapper:*</exclude>
        <exclude>com.googlecode.concurrentlinkedhashmap:concurrentlinkedhashmap-lru</exclude>
        <exclude>com.googlecode.concurrentlinkedhashmap:concurrentlinkedhashmap-lru</exclude>
        <exclude>com.tinkerpop:*</exclude>
        <exclude>com.tinkerpop.*:*</exclude>
        <exclude>org.neo4j.server.plugin:neo4j-gremlin-plugin</exclude>
        <exclude>org.codehaus.groovy:groovy</exclude>
        <exclude>org.fusesource.jansi:jansi</exclude>
        <exclude>antlr:antlr</exclude>
        <exclude>asm:asm-commons</exclude>
        <exclude>asm:asm-util</exclude>
        <exclude>asm:asm-analysis</exclude>
        <exclude>asm:asm-tree</exclude>
        <exclude>stax:stax-api</exclude>
        <exclude>org.codehaus.jettison:jettison</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/plugins/gremlin1.5</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>true</useStrictFiltering>
      <includes>
        <include>com.tinkerpop:*</include>
        <include>com.tinkerpop.*:*</include>
        <include>org.neo4j.server.plugin:neo4j-gremlin-plugin</include>
        <include>org.codehaus.groovy:groovy</include>
        <include>org.fusesource.jansi:jansi</include>
        <include>antlr:antlr</include>
        <include>asm:asm-commons</include>
        <include>asm:asm-util</include>
        <include>asm:asm-analysis</include>
        <include>asm:asm-tree</include>
        <include>stax:stax-api</include>
        <include>org.codehaus.jettison:jettison</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>
