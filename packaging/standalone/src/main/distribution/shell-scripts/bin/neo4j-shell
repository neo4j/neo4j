set -euo pipefail
[[ "${TRACE:-}" ]] && set -x

: "${NEO4J_BIN:=$(dirname "$0")}"
readonly NEO4J_BIN
. "${NEO4J_BIN}/neo4j-shared.sh"

ARGS=""
while [[ $# > 0 ]]
do
    option="$1"
    case "${option}" in
        --file=*|-file=*|--path=*|-path=*|--conf=*|-conf=*)
            orig_filename="${option#*=}"
            orig_arg="${option%=*}"

            ARGS="${ARGS} ${orig_arg}=$(resolve_path "${orig_filename}")"
            shift
            ;;
        --file|-file|--path|-path|--conf|-conf)
            orig_filename="${2}"

            ARGS="${ARGS} ${option} $(resolve_path "${orig_filename}")"
            shift
            shift
            ;;
        *)
            ARGS="${ARGS} ${option}"
            shift
            ;;
    esac
done

setup_environment
check_java
build_classpath

exec "$JAVA_CMD" ${JAVA_OPTS:-} \
  -classpath "$CLASSPATH" \
  -Dfile.encoding=UTF-8 \
  org.neo4j.shell.StartClient \
  ${ARGS}
