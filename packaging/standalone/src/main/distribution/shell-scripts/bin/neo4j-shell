set -euo pipefail
[[ "${TRACE:-}" ]] && set -x

: "${NEO4J_BIN:=$(dirname "$0")}"
readonly NEO4J_BIN
. "${NEO4J_BIN}/neo4j-shared.sh"

setup_environment
check_java
build_classpath

exec "$JAVA_CMD" ${JAVA_OPTS:-} \
  -classpath "$CLASSPATH" \
  -Dfile.encoding=UTF-8 \
  org.neo4j.shell.StartClient \
  "$@"
