set -euo pipefail
[[ "${TRACE:-}" ]] && set -x

PROGRAM="$(basename "$0")"
NEO4J_ROOT="$(cd "$(dirname "$0")"/.. && dirs -l +0)"

cmd_upgrade() {
	opts="$(getopt -o f: -l from: -n "$PROGRAM" -- "$@")"
	eval set -- "${opts}"
	while true; do
	  case "$1" in
		  -f|--from) source="$2"; shift 2 ;;
		  --) shift; break ;;
	  esac
  done
}

usage() {
  echo "${PROGRAM} <command> <options>
}

command="$1"
shift
case "${command}" in
  upgrade) cmd_upgrade "$@" ;;
  help|--help|-h) usage ;;
	*) usage; exit 1 ;;
esac
exit $?
